<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/menu_fragment_offline">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/lbl_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:maxHeight="10dip"
            android:minHeight="10dip"
            android:progress="50"
            android:progressDrawable="@drawable/progess_drawable_blue" />
    </LinearLayout>
    <LinearLayout
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="סנכרון כל המוצרים ב"
            android:textSize="8pt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/sync_all_products"
            android:layout_weight="0.5" />
        <TextView
            android:gravity="center"
            android:text=""
            android:textSize="8pt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/sync_all_products1"
            android:layout_weight="0.5" />
    </LinearLayout>
    <LinearLayout
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="סנכרון מוצרי לקוח ב"
            android:textSize="8pt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/sync_client_products"
            android:layout_weight="0.5" />
        <TextView
            android:gravity="center"
            android:text=""
            android:textSize="8pt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/sync_client_products1"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:id="@+id/menu_layout_id"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15pt"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/menu_divuah_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="דיווח" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/menu_widget_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/id1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:text="@string/fa_icon_cart" />
                <TextView
                    android:id="@+id/id1_text"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_below="@id/id1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="0.33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/id2"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:text="@string/fa_icon_download" />
                <TextView
                    android:id="@+id/id2_text"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_below="@id/id2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="0.33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/id3"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:text="@string/fa_icon_download" />
                <TextView
                    android:id="@+id/id3_text"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_below="@id/id3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/menu_widget_id2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/id4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:textSize="30dp"
                android:gravity="center"
                android:text="@string/fa_icon_download" />
            <TextView
                android:id="@+id/id4_text"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_below="@id/id4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_weight="0.33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:textSize="15dp"
                android:gravity="center"
                android:text="@string/fa_icon_download" />
            <TextView
                android:id="@+id/id5_text"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_below="@id/id5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_weight="0.33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/id6"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:text="@string/fa_icon_download" />
            <TextView
                android:id="@+id/id6_text"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_below="@id/id6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>








</LinearLayout>
</ScrollView>